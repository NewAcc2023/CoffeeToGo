@model IEnumerable<CartItemModel>
	<section class="min-vh-100" style="background-color:lightgray;">
	<div style="width:100%;height:56px; background-color:darkgray;"></div>
	<div style="width:100%;height:20px;"></div>
	<div class="container h-100 py-5">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-10">

				<form class="form-control" asp-action="PerformOrder" method="post">
					<label for="customerName">Customer Name:</label>
					<input type="text" class="form-control border-opacity-50 border-dark" id="customerName" name="customerName" required><br><br>

					<label for="phoneNumber">Phone Number:</label>
					<input type="text" class="form-control border-opacity-50 border-dark" id="phoneNumber" name="phoneNumber" required><br><br>

					<label for="streetAddress">Street Address:</label>
					<input type="text" class="form-control border-opacity-50 border-dark" id="streetAddress" name="streetAddress" required><br><br>

					@foreach (var item in Model)
					{
						<div id="card-@item.Id" class="card rounded-3 mb-4 ">
							<div class="card-body p-4">
								<div class="row d-flex justify-content-between align-items-center">
									<div class="col-md-2 col-lg-2 col-xl-2">
										<div class="card-img-top" style="width:100%; height:200px; background-image:url(@item.ImageURL); background-size:contain; background-repeat:no-repeat; background-position:center;"></div>
									</div>
									<div class="col-md-3 col-lg-3 col-xl-3">

										<p class="lead fw-normal mb-2">@item.Name</p>

										<p><span class="text-muted">Size: </span>M <span class="text-muted">Type: </span>Hot</p>
									</div>
									<div class="col-md-3 col-lg-3 col-xl-2">
										<label>Quantity</label>
										<h5 class="mb-0"><span >@item.Quantity</span></h5>

									</div>
									<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
										<label>Total Price</label>
										<h5 class="mb-0"><span id="totalPriceForOrderItem-@item.Id">@item.TotalPrice</span><span>$</span></h5>
									</div>
									<div class="col-md-1 col-lg-1 col-xl-1 text-end">
									</div>
								</div>
							</div>
						</div>
					}
					<h2 class="text-center m-1">Total Price = @ViewData["TotalForOrder"]$</h2>


					<div class=" text-center">
						<input type="submit" class="btn btn-warning btn-lg" value="Order" />
					</div>



				</form>



			</div>
		</div>
	</div>
</section>

